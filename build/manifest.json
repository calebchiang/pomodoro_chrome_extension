{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.0",
  "description": "A simple Pomodoro Timer to boost productivity",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "notifications",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
